{
    "exclude": ["node_modules"],
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig to read more about this file */

        /* Language and Environment */
        "target": "es2016",

        /* Modules */
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Emit */
        "sourceMap": true,

        /* Type Checking */
        "strict": true,

        /* Completeness */
        "skipLibCheck": true
    }
}
